<h2>Edit your Movie!</h2>
<form action="/movies/edit?movies_id={{movies._id}}" method="post">
  <label for="">Title:</label>
  <input type="text" name="title" value="{{movies.title}}">

  <label for="">Year:</label>
  <input type="text" name="year" value="{{movies.year}}">

  <label for="">Director:</label>
  <input type="text" name="director" value="{{movies.director}}">

  <label for="">Duration:</label>
  <input type="text" name="duration" value="{{movies.duration}}">

  <label for="">Genre:</label>
  <input type="text" name="genre" value="{{movies.genre}}">

  <label for="">Rate:</label>
  <input type="text" name="rate" value="{{movies.rate}}">


  <button type="submit">EDIT</button>
</form>